<div class="container mt-3">
  <h3 class="mb-3">Current Chats</h3>

  <% @chatrooms.each do |chatroom|  %>
  <div class="notification mb-2">
    <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
    <div class="notification-content">
      <p><%= link_to chatroom.name, chatroom_path(chatroom) %></p>
      <p><small>between <%= chatroom.users[0].username %> and <%= chatroom.users[1].username %></small></p>
    </div>

    <div class="notification-actions">
    </div>
  </div>
  <% end  %>

</div>
