<div class="mt-5"></div>
  <div class="container mt-5">
  <h1 class="mt-4 mb-4">DASHBOARD</h1>
  <ul class="nav nav-tabs list-inline tabs-underlined mb-3" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active tab-underlined" id="myevents-tab" data-toggle="tab" href="#myevents" role="tab" aria-controls="myevents" aria-selected="true">My Events</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link tab-underlined" id="nudges-tab" data-toggle="tab" href="#nudges" role="tab" aria-controls="nudges" aria-selected="false">Nudges</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link tab-underlined" id="chatrooms-tab" data-toggle="tab" href="#chatrooms" role="tab" aria-controls="chatrooms" aria-selected="false">Chatrooms</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="myevents" role="tabpanel" aria-labelledby="myevents-tab">
      <div class="mb-2 mt-4  p-5 info-section">
        <h2>Fill here with bookings</h2>
        <% @bookings.each do |booking|%>
          <%= booking.event.name %>
        <% end  %>
        <h2>And then using the event</h2>
        <% @events.each do |event|%>
          <%= event.name %>
        <% end  %>
      </div>
    </div>
    <div class="tab-pane fade" id="nudges" role="tabpanel" aria-labelledby="nudges-tab">
      <div class="mb-2 mt-4  p-5 info-section">
        <div>
         <h2>Fill here with Nudges (both outward and inward, for now)</h2>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="chatrooms" role="tabpanel" aria-labelledby="chatrooms-tab">
      <div class="mb-2 mt-4  p-5 info-section">
        <div>
         <h2>Fill here with the users chatrooms when relevant</h2>
        </div>
      </div>
    </div>
  </div>
</div>
