
<div class="container">
  <h4 class="text-right"> Welcome home <%= @user.username %></h4>
  <h5 class="text-center mt-3"> Featured Events </h5>

<%# ------------  carousel -------------- %>

  <div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag @featured_events[0].photo %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%=@featured_events[0].name%></h5>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag @featured_events[1].photo %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%=@featured_events[1].name%></h5>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag @featured_events[2].photo %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%=@featured_events[2].name%></h5>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<%# ------------  search -------------- %>

  <h5 class="mt-5"> Search Events! </h5>
  <div class= "input-container" data-controller="refresh-list">
  <div class="justify-content-center">
    <div class="search-bar col-8">
      <%= form_with url: events_path, method: :get, style:"width:100%", html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
        <%= f.text_field :query,
                          class: "form-control",
                          placeholder: 'search for an event',
                          value: params[:query],
                          data: {
                          refresh_list_target: 'searchInput',
                          action: "keyup->refresh-list#update"
                        } %>
      <% end %>
    </div>
  </div>
  <%= render 'list', events: @pg_search_events %>
  </div>



<%# ----------------- Categories cards section ------------------------%>

  <div class="container">
    <h2 class="mt">Categories</h2>
    <div class="cards">
      <% @categories.each do |category| %>
        <%= link_to category_path(category) do %>
          <div class="card-category">
            <div class="category-photo">
              <%= image_tag category.photo %>
            </div>
            <div class="category-title">
            <p><%= category.name %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
