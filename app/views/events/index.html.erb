
<div class="container-sm">
    <h1>Title of some shit</h1>
    <h3> Top Events </h3>
    <div class= "input-container" data-controller="refresh-list">
    <div class="row justify-content-center">
      <div class="search-bar col-6">
        <%= form_with url: events_path, method: :get, style:"width:100%", html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                            class: "form-control",
                            placeholder: 'Type an event',
                            value: params[:query],
                            data: {
                            refresh_list_target: 'searchInput',
                            action: "keyup->refresh-list#update"
                          } %>
        <% end %>
        </div>
      </div>
      <%= render 'list', events: @pg_search_events %>
    </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%=image_tag("", class: "carrousel-pic w-100") %>
         <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[0].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
      <div class="carousel-item">
        <%=image_tag("Qotsa.jpg", class: "carrousel-pic w-100") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[1].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
      <div class="carousel-item">
        <%=image_tag("", class: "carrousel-pic w-100") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[2].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<h1 class="categories-title mt-5 ">Categories</h1>
  <div class="category-main-div-game-index">
    <% @categories.each do |cat| %>
      <div class="parent-category-layout-design-category-event-index">
        <%= link_to category_path(cat) do %>
          <div class="cards category-layout-design-category-event-index">
              <%# <%= image_tag category.photo %>
            <div class="child-category-layout-design-category-event-index">
            <p><%= cat.name %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>

</div>
