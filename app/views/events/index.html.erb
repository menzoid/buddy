
<div class="container">
  <h4 class="text-right"> Welcome home <%= @user.profile.username %></h4>
  <h5 class="text-center mt-3"> Featured Events </h5>

<%# ----- new carousel --------- %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag @featured_events[0].photo, class: "d-block w-100" %>
      <div class="carousel-caption d-md-block">
        <h5><%= @featured_events[0].name %></h5>
        <p><%= @featured_events[0].date %></p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag @featured_events[1].photo, class: "d-block w-100" %>
      <div class="carousel-caption d-md-block">
        <h5><%= @featured_events[1].name %></h5>
        <p><%= @featured_events[1].date %></p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag @featured_events[2].photo, class: "d-block w-100" %>
      <div class="carousel-caption d-md-block">
        <h5><%= @featured_events[2].name %></h5>
        <p><%= @featured_events[2].date %></p>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<%# ------------  search -------------- %>

  <h5 class="mt-5"> Search Events! </h5>
  <div class= "input-container" data-controller="refresh-list">
  <div class="justify-content-center">
    <div class="search-bar col-8">
      <%= form_with url: events_path, method: :get, style:"width:100%", html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
        <%= f.text_field :query,
                          class: "form-control",
                          placeholder: 'search for an event',
                          value: params[:query],
                          data: {
                          refresh_list_target: 'searchInput',
                          action: "keyup->refresh-list#update"
                        } %>
      <% end %>
    </div>
  </div>
  <%= render 'list', events: @pg_search_events %>
  </div>
</div>

<%# ---------- test for horizontal scroll ---------------- %>

<div class="app">
  <h4>Categories</h4>

  <ul class="hs full no-scrollbar">

    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <li class="item card-category">
          <div class="category-photo">
            <%= image_tag category.photo %>
          </div>
          <div class="category-title">
          <p><%= category.name %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>


<%# ----------------- Categories cards section ------------------------%>
<div class="container">
  <h2 class="mt">Categories</h2>
  <div class="cards">
    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="card-category">
          <div class="category-photo">
            <%= image_tag category.photo %>
          </div>
          <div class="category-title">
          <p><%= category.name %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
