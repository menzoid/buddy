      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%=image_tag("", class: "carrousel-pic w-100") %>
         <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[0].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
      <div class="carousel-item">
        <%=image_tag("Qotsa.jpg", class: "carrousel-pic w-100") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[1].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
      <div class="carousel-item">
        <%=image_tag("", class: "carrousel-pic w-100") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%=@featured_events[2].name%></h5>
            <p><%=@featured_events[0].description%></p>
          </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<%# Categories cards section %>

<h1 class="categories-title mt-5 ">Categories</h1>
<div class="cards mr-4 ml-4">
  <% @categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="card-category">
        <div class="category-photo">
          <%= image_tag 'live-music.png' %>
        </div>
        <div class="category-title">
        <p><%= category.name %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

    <div data-controller="refresh-list">
        <%= form_with url: events_path, method: :get, html: { class: 'mb-5', data: { refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                           class: "form-control",
                           placeholder: 'Type a movie title',
                           value: params[:query],
                           data: {
                            refresh_list_target: 'searchInput',
                            action: "keyup->refresh-list#update"
                          } %>
        <% end %>
       <%= render 'list', events: @pg_search_events %>
    </div>
