  <div class="index-head">
    <div class="container-event">
      <div class="event-img">
        <%= image_tag @event.photo, class: "event-pic" %>
      </div>
    </div>
    <div class="container">
      <div class = "event-info">
        <h4><%= @event.name %></h4>
      </div>
      <div class="d-flex justify-content-between event-icons">
        <p><i class="fas fa-calendar"></i> <%= @event.date.strftime("%d/%m/%Y") %></p>
        <p><i class="fas fa-map-marker-alt"></i> <%= @event.address %></p>
        <p><i class="fas fa-users"></i> <%= @event.bookings.count + 1 %></p>
      </div>
    </div>
  </div>

<div class="container">
  <div>
    <h4>About</h4>
    <p><%=@event.description%></p>
  </div>

  <% if @join_available %>
  <div class="show-buttons Join">
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#intentionsModal">
    Join Event
  </button>
  </div>
<%= render 'intentions', event: @event, booking: @booking%>
  <% end %>

<div class="back-button-link">
  <%= link_to 'javascript:history.go(-1);' do %>
    <div class="back-button">
      <p>Back</p>
    </div>
  <% end %>
</div>

<div class="mapbox-map">
  <div id="map"
        style="width: 100%;heigth:100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
