<div class="container">
    <div class="row">
      <%=image_tag "rolling stones.jpg", height: 294, class: "event-img" %>
          <h2><%= @event.name %></h2>
        <h4>Date: <%= @event.date.strftime("%d/%m/%Y") %></h4>
        <p>Time: <%= @event.time.strftime("%k:%M")  %></p>
    </div>


    <div>
      <p>Description: <%= @event.description %></p>
    </div>

  <div id="map"
      style="width: 100%; height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <%= link_to "Join Event", new_event_booking_path(@event), class: "btn btn-ghost" %>
</div>
