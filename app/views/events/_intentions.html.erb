
<div class="modal fade" id="intentionsModal" tabindex="-1" role="dialog" aria-labelledby="intentionsModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title modal-letters" id="intentionModalLabel">Reveal your intention</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  <div>
    <fieldset class="form-group radio_buttons optional snippet_intentions">
      <input type="hidden" name="snippet[intention_ids][]" value="0">
        <%= simple_form_for [event, booking] do |f| %>
        <div class="intention-item">
          <%= f.association :intention, as: :radio_buttons,
                            input_html: { class: "intention-selector" },
                            item_wrapper_class: 'intention-item'%>
        </div>
          <%= f.input :intention_description %>
          <%= f.submit "Enter Event", class: "btn btn-create btn-booking"%>
     <% end %>
     </fieldset>
    </div>
  </div>
</div>
</div>
