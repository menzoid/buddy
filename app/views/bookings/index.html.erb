
  <div class="index-head">
    <div class="container-event">
      <div class="event-img">
        <%= image_tag @event.photo, class: "event-pic" %>
      </div>
    </div>
    <div class="container">
      <div class = "event-info">
        <h4><%= @event.name %></h4>
      </div>
      <div class="d-flex justify-content-between event-icons">
        <p><i class="fas fa-calendar"></i> <%= @event.date.strftime("%d/%m/%Y") %></p>
        <p><i class="fas fa-map-marker-alt"></i> <%= @event.address %></p>
        <p><i class="fas fa-users"></i> <%= @event.bookings.count + 1 %></p>
      </div>
    </div>
  </div>
<%# ----- these create the tabs (adapt for mobile)  ------- %>

  <ul class="nav nav-tabs list-inline tabs-underlined mb-3" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active tab-underlined" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link tab-underlined" id="guests-tab" data-toggle="tab" href="#guests" role="tab" aria-controls="guests" aria-selected="false">Attendees</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link tab-underlined" id="intention-tab" data-toggle="tab" href="#intention" role="tab" aria-controls="intention" aria-selected="false">Intention</a>
    </li>
  </ul>

  <%#---     this is the tabbed content  -----%>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="descriptions-tab">
      <div class="container mt-4">
        <div>
          <h4>About</h4>
          <p><%=@event.description%></p>
        </div>
        <div>
          <h4>Location</h4>
          <p><%=@event.address%></p>
        </div>
      </div>
      <div>
        <div class="mapbox-map">
          <div id="map"
                style="width: 100%;heigth:100%;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="guests" role="tabpanel" aria-labelledby="guests-tab">
      <div class="mb-2 mt-4 container">
        <div>
          <% @bookings.each do |booking|  %>
            <% if booking.user != @user%>
              <%= link_to booking_path(booking), method: :get do %>
                <div class="notification mb-2">
                  <%= cl_image_tag booking.user.profile.photo.key, class: 'avatar-large' %>
                  <div class="notification-content">
                    <p><small>Intention: <%= booking.intention.name %></small></p>
                    <p><strong><%= booking.user.profile.username %></strong></p>
                  </div>
                  <div class="notification-actions">
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end  %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="intention" role="tabpanel" aria-labelledby="intention-tab">
      <div class="mt-4 container">
        <div>
          <h5>My stated intention: <%= @intention[0].intention.name %></h5>
          <p class= "mt-3"><%= @intention[0].intention_description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
