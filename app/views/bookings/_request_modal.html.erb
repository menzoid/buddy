<div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title modal-letters" id="requestModalLabel">State your Case</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

      <div class="container">
        <%=simple_form_for [booking,request] do |f|  %>
        <%=f.input :reason, hint: 'why do you want to go with them?'  %>
        <%= f.submit "Send Request", class: "btn btn-flat" %>
        <%end %>
      </div>

  </div>
</div>
