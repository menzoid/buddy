<div class="container">
  <div class="buddy-profile text-center">
    <%= cl_image_tag @buddy.profile.photo.key %>
    <h4 class="mt-2"><%=@buddy.profile.username  %> </h4>
  </div>
  <div class="intention-info mt-4">
    <h5>Their intention</h5>
    <p>Type: <%=@booking.intention.name %> </p>
    <p><%=@booking.intention_description %> </p>
  </div>
  <div class="buddy-info">
    <h5>About them</h5>
    <p><%= @buddy.profile.bio %></p>
  </div>



  <div class="show-buttons Send Request">
  <button type="button" class="btn btn-create" data-toggle="modal" data-target="#requestModal">
    Send Request
  </button>
  </div>
  <%= render 'request_modal', booking: @booking, request: @request%>
</div>
