
  <div class="message-container" id="message-<%= message.id %>">
    <div class="messages">
      <%= cl_image_tag message.user.profile.photo.key, class: 'avatar-large' %>
      <div class="messages-content">
        <p><small><%= message.user.profile.username %></small></p>
        <p><%= message.content %></p>
        <h6><%= message.created_at.strftime("%l:%M%p") %></h6>
      </div>

      <div class="messages-actions">
      </div>
    </div>
  </div>
