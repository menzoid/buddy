
 <% if message.user_id == current_user.id %>
  <div class="message-user float-right mr-2" id="message-<%= message.id %>">
    <div class="message-user-content">
      <p><%= message.content %></p>
    </div>
    <h6 class="message-user-time"><%= message.created_at.strftime("%l:%M") %></h6>
    <div class="message-user-photo">
      <%= cl_image_tag message.user.profile.photo.key, class: 'avatar' %>
      <p><small>me</small></p>
    </div>
  </div>

  <% else %>
  <div class="message-guest ml-2" id="message-<%= message.id %>">
    <div class="message-guest-photo">
      <%= cl_image_tag message.user.profile.photo.key, class: 'avatar' %>
      <p><small><%= message.user.profile.username %></small></p>
    </div>
    <div class="message-guest-content">
      <p><%= message.content %></p>
    </div>
    <h6 class="message-guest-time"><%= message.created_at.strftime("%l:%M") %></h6>
  </div>
<% end %>
